<link rel="stylesheet" href="/css/user_profile.css">
<h1>This is the user's profile page</h1>

<p> Welcome <%= user.name %>! </p>
<p> <%= user.email_id %></p>

<section id="feed-posts">
  <% if(locals.user) {%>
  <h4>Creat a post</h4>
  <form action="/post/create" id="new-post-form" method="POST">
    <textarea name="content" id="" cols="30" rows="3" placeholder="Type here..." required></textarea>
    <input type="submit" name="" id="" value="Post" />
  </form>
  <%}%>
    <div id="post-list-cont">
      <ul>
        <% for(post of posts) {%>
  <p>
    <li>
      <p><%= post.content %> &nbsp; -<%= post.user.name %></p>
      <p></p>
    </li>
  </p>
  <div class="post-comments">
    <div class="post-comments-list-cont">
      <ul id="post-comments-<%= post._id %>">
        <% for(comment of post.comment) { %>
        <p>
          <%= comment.content %>
          <br />
          <%= comment.user.name %>
        </p>
        <% } %>
      </ul>
    </div>
    <% if(locals.user) {%>
    <form action="/comment/create" method="POST">
      <input type="text" name="content" placeholder="Type here to add comment..." required />
      <input type="hidden" name="post" value="<%= post.id %>" />
      <input type="submit" name="" id="" value="Add Comment" />
    </form>
    <%}%>
        </div>
        
  <%}%>
    </ul>
  </div>
</section>